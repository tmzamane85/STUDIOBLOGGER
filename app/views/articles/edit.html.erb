<h1>Edit existing article</h1>

<% if @article.errors.any? %>

<h2>The following errors prevented the article from getting created</h2>

<ul>

<% @article.errors.full_messages.each do |msg| %>

<li><%= msg %></li>

<% end %>

</ul>

<% end %>

<%= form_for @article do |f| %>

<p>

<%= f.label :title %><br/>

<%= f.text_field :title, id: "fields" %>

</p>

<p>

<%= f.label :description %><br/>

<%= f.text_area :description, id: "fields" %>

</p>

<p>

<%= f.submit id: "submit" %>

</p>

<% end %>
<%= link_to "Back to article listing", articles_path, id: "back" %>
