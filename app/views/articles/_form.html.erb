<div class="container">
<%= render 'shared/errors', obj: @article %>

<div class="col-xs-5">
  <%= form_for(@article, :html => {class: "form-horizontal shadow p-3 mb-5 bg-brown rounded", role: "form"}) do |d| %>
    <div class="form-group">
      <div class="control-label offset-1 col-sm-8">
        <%= d.label :title %>
      </div>
      <div class="offset-1 col-sm-10">
        <%= d.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: "true" %>
      </div>
    </div> 
    
    <div class="form-group">
      <div class="control-label offset-1 col-sm-10">
        <%= d.label :description %>
      </div>
      <div class="offset-1 col-sm-10">
        <%= d.text_area :description, rows: 6, class: "form-control", placeholder: "Description of article", autofocus: "true" %>
      </div>
    </div>  
    <div class="offset-1 col-sm-6">
      <%= d.submit id: "submit" %>
    </div> 
  <p > 
  <% end %>    
     <div class="mb-6">
              <%= link_to "[ Cancel request and return to article listing", articles_path, id: "back" %> ]
      </div>
  </div>
</div>